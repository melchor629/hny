{
  "name": "@melchor629/hny",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/melchor629/hny"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "clean": "rm -rf dist && npm run clean --workspaces",
    "dist": "./scripts/copy-to-dist.sh && ./scripts/compress-dist-files.sh",
    "serve": "serve -l 3000 dist",
    "docker": "docker image build -t melchor9000/hny -f docker/build.dockerfile .",
    "serve:docker": "docker container run --rm -p 3000:80 -v $PWD/docker/nginx:/etc/nginx/conf.d -v $PWD/dist:/usr/share/nginx/html nginx:alpine"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "serve": "^14.0.1"
  }
}
