{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",

        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [ "src/*", "src/*.js" ]
        },
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*"
    ]
}